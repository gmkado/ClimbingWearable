<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:pikolo="http://schemas.android.com/apk/res-auto"
    xmlns:ls="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.grant.wearableclimbtracker.EditClimbDialogFragment">


    <TabHost
        android:id="@+id/tab_host"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ScrollView
                    android:id="@+id/tab_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                            <com.farbod.labelledspinner.LabelledSpinner
                            android:id="@+id/spinner_gym"
                            ls:labelText="Select Gym"
                            ls:widgetColor="#F44336"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/editText_gym"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Enter new gym name"
                            android:inputType="textPersonName"
                            android:visibility="gone" />

                        <com.farbod.labelledspinner.LabelledSpinner
                            android:id="@+id/spinner_area"
                            ls:labelText="Select Area"
                            ls:widgetColor="#F44336"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/editText_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Enter new area name"
                            android:inputType="textPersonName"
                            android:visibility="gone" />

                        <com.farbod.labelledspinner.LabelledSpinner
                            android:id="@+id/spinner_color"
                            ls:labelText="Select Climb Color"
                            ls:widgetColor="#F44336"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/layout_addcolor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.larswerkman.holocolorpicker.ColorPicker
                                android:id="@+id/picker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="visible" />

                            <com.larswerkman.holocolorpicker.SVBar
                                android:id="@+id/svbar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/editText_notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Notes"
                            android:inputType="textMultiLine" />

                    </LinearLayout>
                </ScrollView>
                <LinearLayout
                    android:id="@+id/tab_grade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ListView
                        android:id="@+id/grade_listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:choiceMode="singleChoice"
                        android:listSelector="#666666" />
                </LinearLayout>


            </FrameLayout>

        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SAVE SEND" />

        <Button
            android:text="DELETE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_button"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
