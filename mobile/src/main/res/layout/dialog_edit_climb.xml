<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:pikolo="http://schemas.android.com/apk/res-auto"
    xmlns:ls="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.grant.wearableclimbtracker.EditClimbDialogFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/grade_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:listSelector="#666666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <com.farbod.labelledspinner.LabelledSpinner
                android:id="@+id/spinner_gym"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ls:labelText="Select Gym" />

            <com.farbod.labelledspinner.LabelledSpinner
                android:id="@+id/spinner_area"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                ls:labelText="Select Area" />
            <ImageButton
                android:id="@+id/imagebutton_color"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                 />
        </LinearLayout>

        <EditText
            android:id="@+id/editText_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Notes"
            android:inputType="textMultiLine" />


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SAVE SEND" />

        <Button
            android:text="DELETE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_button"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
