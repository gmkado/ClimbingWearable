<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.grant.wearableclimbtracker.EditClimbDialogFragment">

    <com.polyak.iconswitch.IconSwitch
        android:id="@+id/switch_climbtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isw_icon_left="@drawable/icon_boulder"
        app:isw_icon_right="@drawable/icon_ropes" />
    <TabHost
        android:id="@+id/tab_host"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <org.honorato.multistatetogglebutton.MultiStateToggleButton
                        android:id="@+id/mstb_goalunit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        app:mstbPrimaryColor="@color/button_primary_color"
                        app:mstbSecondaryColor="@color/button_secondary_color"
                        app:values="@array/mstb_sample_unit">

                    </org.honorato.multistatetogglebutton.MultiStateToggleButton>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:paddingTop="20dp"
                        android:text="Target"
                        android:textAlignment="viewStart"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_grade"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <EditText
                            android:id="@+id/editText_target"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/textView_targetSuffix"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text="CLIMBS" />

                        <Spinner
                            android:id="@+id/spinner_heightunit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/startdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <DatePicker
                        android:id="@+id/datepicker_startdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ScrollView
                    android:id="@+id/enddate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <org.honorato.multistatetogglebutton.MultiStateToggleButton
                            android:id="@+id/mstb_goalendtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            app:mstbPrimaryColor="@color/button_primary_color"
                            app:mstbSecondaryColor="@color/button_secondary_color"
                            app:values="@array/mstb_sample_endtype">

                        </org.honorato.multistatetogglebutton.MultiStateToggleButton>

                        <Switch
                            android:id="@+id/switch_recurring"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingTop="20dp"
                            android:text="Recurring goal?"
                            android:textAlignment="viewStart"
                            android:textStyle="bold" />

                        <org.honorato.multistatetogglebutton.MultiStateToggleButton
                            android:id="@+id/mstb_period"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            app:mstbPrimaryColor="@color/button_primary_color"
                            app:mstbSecondaryColor="@color/button_secondary_color"
                            app:values="@array/mstb_sample_recurrence">

                        </org.honorato.multistatetogglebutton.MultiStateToggleButton>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id = "@+id/layout_period">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="End after"/>

                            <EditText
                                android:id="@+id/edittext_numperiod"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="number" />

                            <TextView
                                android:id="@+id/textview_periodSuffix"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0"
                                android:gravity="center"
                                android:text="Sessions" />
                        </LinearLayout>

                        <DatePicker
                            android:id="@+id/datePicker_enddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </ScrollView>

            </FrameLayout>

        </LinearLayout>
    </TabHost>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goal Summary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_goalSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want to climb 30 points every session for 10 sessions blah blah blah" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="SAVE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/save_button"
            android:layout_weight="1" />

        <Button
            android:text="DELETE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_button"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
