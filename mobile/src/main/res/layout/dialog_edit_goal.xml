<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ls="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.grant.wearableclimbtracker.EditClimbDialogFragment">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unnamed Goal"
        android:id="@+id/editText_goalName"/>
    <TextView
        android:id="@+id/textView_goalSummary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="I want to climb 30 points every session for 10 sessions blah blah blah" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="SAVE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/save_button"
            android:layout_weight="1" />

        <Button
            android:text="DELETE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_button"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
