<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Bouldering"
        android:textAlignment="center" />

    <FrameLayout
        android:id="@+id/sessionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_outer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_middle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_inner"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center" />
    </FrameLayout>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/nonSessionLayout"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/count_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="CLIMBS: 0"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/points_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="POINTS: 0"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/ppsavg_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="PPS AVG: 0"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/max_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="MAX: 0"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="normal|bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
