<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Widget.WearDiag.TextView.Title"
        android:layout_width="187dp"
        android:text="Bouldering"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/title_textView"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        android:layout_marginBottom="8dp" />

    <TextView
        style="@style/TextAppearance.Wearable.Large"
        android:layout_width="187dp"
        android:text="Climbs: 2"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/count_textview"
        android:textColor="@color/ambient_mode_text"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <TextView
        android:layout_width="187dp"
        android:text="Points: 5"
        style="@style/TextAppearance.Wearable.Large"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/points_textview"
        android:textColor="@color/ambient_mode_text"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <TextView
        android:layout_width="187dp"
        android:text="Max: V5"
        style="@style/TextAppearance.Wearable.Large"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/max_textView"
        android:textColor="@color/ambient_mode_text"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:layout_marginBottom="16dp" />

    <android.support.constraint.Guideline
        android:layout_width="384dp"
        android:id="@+id/guideline2"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="358dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.7" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_percent="0.45"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="230dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_percent="0.19765167"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="101dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
