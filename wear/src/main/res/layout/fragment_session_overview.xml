<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        style="@style/Widget.WearDiag.TextView.Title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Bouldering"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/title_textView"
        android:layout_weight="1" />

    <TextView
        style="@style/TextAppearance.Wearable.Large"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Climbs: 2"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/count_textview"
        android:layout_weight="3"
        android:textColor="@color/ambient_mode_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Points: 5"
        style="@style/TextAppearance.Wearable.Large"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/points_textview"
        android:layout_weight="3"
        android:textColor="@color/ambient_mode_text" />

</LinearLayout>
