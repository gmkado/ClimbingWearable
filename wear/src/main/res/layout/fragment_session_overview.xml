<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/Widget.WearDiag.TextView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bouldering"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/title_textView"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <TextView
        style="@style/TextAppearance.Wearable.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Climbs: 2"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/count_textview"
        android:textColor="@color/ambient_mode_text"
        android:textSize="18sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Points: 5"
        style="@style/TextAppearance.Wearable.Large"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/points_textview"
        android:textColor="@color/ambient_mode_text"
        android:textSize="18sp"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Max: V5"
        style="@style/TextAppearance.Wearable.Large"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/max_textView"
        android:textColor="@color/ambient_mode_text"
        android:textSize="18sp" />


</LinearLayout>